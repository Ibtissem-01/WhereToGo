{% extends 'base.html.twig' %}

{% form_theme formVoyage 'bootstrap_4_layout.html.twig' %}

{% block title %}Nouveau voyage!{% endblock %}

{% block body %}
<div class='container mt-md-5 mb-md-5 p-4 bg-white'> 
	<div class='text-center mb-md-5'>
        <h1 class="h2 mb-md-3">Création d'un voyage !</h1>
    </div>
    {{form_start(formVoyage)}}

    <div class="form-group">
        <label for="">Titre du voyage</label>
        {{form_widget(formVoyage.titre, {'attr' : {'placeholder' : "Titre", 'required' : true}}) }}
    </div>

    <div class="form-group">
        <label for="">Pays de destination</label>
        {{form_widget(formVoyage.pays, {'attr' :{'placeholder' : "Pays" , 'required' : true}}) }}
    </div>
    
    <div class="form-group">
        <label for="">Ville de destination</label>
        {{form_widget(formVoyage.ville, {'attr' :{'placeholder' : "Ville", 'required' : true}}) }}
    </div>

    <div class="form-group">
        <label for="">Durée du voyage</label>
        {{form_widget(formVoyage.duree, {'attr' :{'placeholder' : "XX jours", 'required' : true}}) }}
    </div>

    <div class="form-group">
        <label for="">Date du début du voyage </label>
        {{form_widget(formVoyage.dateDebutVoyage, {'attr' :{'placeholder' : "XX/XX/XXXX", 'required' : true}}) }}
    </div>

    <div class="form-group">
        <label for="">Date de fin du voyage</label>
        {{form_widget(formVoyage.dateFinVoyage, {'attr' :{'placeholder' : "XX/XX/XXXX", 'required' : true}}) }}
    </div>

    <div class="form-group">
        <label for="">Coût du voyage</label>
        {{form_widget(formVoyage.cout, {'attr' :{'placeholder' : "XX €", 'required' : true}}) }}
    </div>
    <div class="form-group">
        <label for="">Votre récit :</label>
        {{form_widget(formVoyage.description, {'attr' :{'placeholder' : "Racontez votre voyage", 'required' : true}}) }}
    </div>

    <button type="submit" class="btn btn-primary">
        {% if updateMode %}
            Enregistrer
        {% else %}
            Ajouter votre voyage
        {% endif %}
    </button>

    {{form_end(formVoyage)}}

</div>
</div>

{% endblock %}
